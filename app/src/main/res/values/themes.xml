<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidMidTerm" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/red</item>
         <item name="colorPrimaryContainer">@color/red</item>
         <item name="colorOnPrimary">@color/red</item>
         <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.AndroidMidTerm" parent="Base.Theme.AndroidMidTerm" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.AndroidMidTerm</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat"/>

</resources>